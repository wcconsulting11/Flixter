<!DOCTYPE html>
<html>
  <head>
    <title>Flixter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="http://vjs.zencdn.net/5.12.6/video-js.css" rel="stylesheet">

  </head>

  <body>
  <div id="flex-content-container">
   <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse">
   <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
   </button>
  <a class="navbar-brand" href="#">Flixter</a>

  <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
    <ul class="navbar-nav mr-auto mt-2 mt-md-0">
      <li class="nav-item">
        <%= link_to 'See All Courses', courses_path, class: 'nav-link' %>
      </li>
    </ul>
    <ul class="navbar-nav mr-auto mt-2 mt-md-0">
      <li class="nav-item active">
        <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
      </li>
	    <% if user_signed_in? %>
      <li class="nav-item">
       <%= link_to 'My Dashboard', dashboard_path, class: 'nav-link' %>
      </li>
        <li class="nav-item">
          <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: 'nav-link' %>
        </li>
	    <% else %>
        <li class="nav-item">
            <%= link_to "Sign In", new_user_session_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
             <%= link_to "Sign Up", new_user_registration_path, class: 'nav-link' %>
        </li>
	    <% end %>
      
    </ul>
    
  </div>
</nav>

<% if notice.present? %>
  <p class="alert alert-info"><%= notice %></p>
<% end %>

<% if alert.present? %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<%= yield %>

</div>

<div id="footer">
  <div class="container">
   <div class="row">
      <div class="col-12 col-sm-3">
        <b>Teachers</b>
        <br />
        <%= link_to 'Teach a Course', new_instructor_course_path %>
        <br />
        <%= link_to 'My Dashboard', dashboard_path %>
      </div>
      <div class="col-12 col-sm-3">
        
        <%= link_to 'About', about_path %>
        <br />
        
        <%= link_to 'Team', team_path %>
        <br />
        
        <%= link_to 'Career', career_path %>
        <br />
        <%= link_to 'Privacy Policy', privacy_path %>
      </div>
      <div class="col-12 col-sm-3">
        
        <%= link_to 'Contact', contact_path %>
        <br />
        Support@WLCBusinessConsulting
        </div>
      <div class="col-12 col-sm-3">
        <b>Social</b>
        <br />
        <br />
        <%= link_to 'http://github.com/wcconsulting11' do %>
        <%# <span class="fas fa-github-square fa-2x social-button"></span> %>
        <span class="social-button"><i class="fab fa-github-square"></i></span>
       <% end %>
       <%= link_to 'https://linkedin.com/in/wendy-c-193a441a' do %>
       <%# <span class="fas fa-Linkedin-square fa-2x social-button"></span> %>
       <span class="social-button"><i class="fab fa-linkedin"></i></span>
       <% end %>
       </div>
    </div>
  </div>
</div>

<script src="http://vjs.zencdn.net/5.12.6/video.js"></script>
<script src="http://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>
<script src="https://kit.fontawesome.com/fb3fb8fb4b.js" crossorigin="anonymous"></script>
</body>
</html>
